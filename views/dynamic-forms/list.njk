{% extends "base.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "moj/components/interruption-card/macro.njk" import interruptionCard %}

{% block pageTitle %}
  Dynamic Forms - {{ config.SERVICE_NAME }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Dynamic Forms</h1>

      <p class="govuk-body-l">
        Choose from our example forms or create your own using JSON configuration.
      </p>

      {% if availableForms and availableForms.length > 0 %}
        <div class="govuk-grid-row">
          {% for form in availableForms %}
            <div class="govuk-grid-column">
              {% call interruptionCard({
                heading: form.title,
                primaryAction: {
                  text: "Continue",
                  href: "/dynamic-forms/" + form.id
                },
                secondaryAction: {
                  text: "Go back to homepage",
                  href: "/"
                }
                })
              %}
                <p>{{ form.description }}</p>
              {% endcall %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="govuk-body">No example forms available.</p>
      {% endif %}

    </div>
  </div>
{% endblock %}